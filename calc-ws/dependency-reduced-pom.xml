<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <parent>
    <artifactId>simplity-calc</artifactId>
    <groupId>org.simplity.calc</groupId>
    <version>0.0.1-SNAPSHOT</version>
  </parent>
  <modelVersion>4.0.0</modelVersion>
  <artifactId>calc-ws</artifactId>
  <name>Calculation Web Service</name>
  <build>
    <plugins>
      <plugin>
        <artifactId>maven-shade-plugin</artifactId>
        <version>3.5.2</version>
        <executions>
          <execution>
            <phase>package</phase>
            <goals>
              <goal>shade</goal>
            </goals>
            <configuration>
              <transformers>
                <transformer>
                  <mainClass>org.simplity.calc.ws.WebService</mainClass>
                </transformer>
              </transformers>
            </configuration>
          </execution>
        </executions>
      </plugin>
      <plugin>
        <groupId>com.google.cloud.tools</groupId>
        <artifactId>jib-maven-plugin</artifactId>
        <version>3.4.2</version>
        <configuration>
          <from>
            <image>amazoncorretto:21-alpine-jdk</image>
          </from>
          <to>
            <image>118790661854.dkr.ecr.us-east-1.amazonaws.com/org.simplity.calc.ws</image>
            <tags>
              <tag>latest</tag>
            </tags>
          </to>
          <platforms>
            <platform>
              <architecture>amd64</architecture>
              <os>linux</os>
            </platform>
          </platforms>
          <container>
            <mainClass>org.simplity.calc.ws.WebService</mainClass>
          </container>
        </configuration>
      </plugin>
    </plugins>
  </build>
</project>
